<body>
    <!-- Start Header Area -->
    <header class="header-section d-xl-block">
        <div class="header-wrapper">
            <div class="header-bottom header-bottom-color--golden section-fluid sticky-header sticky-color--golden">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12 d-flex align-items-center justify-content-between">
                            <!-- Start Header Logo -->
                            <div class="header-logo">
                                <div class="logo">
                                    <a href="/user/home">
                                        <h2 class="graza mb-0">Graza</h2>
                                    </a>
                                </div>
                            </div>
                            <!-- End Header Logo -->

                            <!-- Start Header Main Menu -->
                            <div class="main-menu menu-color--black menu-hover-color--golden">
                                <nav class="web-nav">
                                    <ul class="category-header">
                                        <li class="has-dropdown has-megaitem">
                                            <a>Shop <i class="fa fa-angle-down"></i></a>
                                            <!-- Mega Menu -->
                                            <div class="mega-menu">
                                                <ul class="mega-menu-inner">
                                                    <% if (categories) { %>
                                                        <% categories.forEach(category => { %>
                                                            <li class="mega-menu-item">
                                                                <a href="#" class="mega-menu-item-title">
                                                                    <%= category.name %>
                                                                </a>
                                                                <ul class="mega-menu-sub">
                                                                    <% if (subCategories) { %>
                                                                        <% subCategories.forEach(subCategory => { %>
                                                                            <% if (subCategory.categoryId.toString() === category._id.toString()) { %>
                                                                                <li>
                                                                                    <a href="/user/showProducts?subCatId=<%= subCategory._id.toString() %>">
                                                                                        <%= subCategory.name %>
                                                                                    </a>
                                                                                </li>
                                                                            <% } %>
                                                                        <% }) %>
                                                                    <% } %>
                                                                </ul>
                                                            </li>
                                                        <% }) %>
                                                    <% } %>
                                                </ul>
                                                <div class="menu-banner">
                                                    <a href="#" class="menu-banner-link">
                                                        <img class="menu-banner-img" src="/user/images/banner/menu-banner.jpg" alt="">
                                                    </a>
                                                </div>
                                            </div>
                                        </li>
                                        <li>
                                            <a href="/user/aboutUs">About Us</a>
                                        </li>
                                        <li>
                                            <a href="/user/contactUs">Contact Us</a>
                                        </li>
                                        <li>
                                            <a href="/user/profile">Profile</a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                            <div class="d-flex options-and-menu">
                            <% if (isLoggedIn) { %>
                                <div class="d-flex">
                                    <ul class="header-action-link action-color--black action-hover-color--golden">
                                        <li class="go-to-wishlist">
                                            <a href="/user/wishlist">
                                                <i class="icon-heart"></i>
                                                <span class="item-count wishlist-count">
                                                    <%= wishListLength %>
                                                </span>
                                            </a>
                                        </li>
                                        <li class="go-to-cart">
                                            <a href="/user/cart">
                                                <i class="icon-bag"></i>
                                                <span class="item-count cart-count">
                                                    <%= cartLength %>
                                                </span>
                                            </a>
                                        </li>
                                        <!-- <li>
                                            <a  class="show-sidebar justify-content-center align-items-center d-none">
                                                <i class="icon-menu"></i>
                                            </a>
                                        </li> -->
                                    </ul>
                                    <ul class="d-flex justify-content-center align-items-center logout ml-2">
                                        <li>
                                            <a href="/logout" class="d-flex justify-content-center align-items-center" style="letter-spacing: 5px;">
                                                <i class="icon-logout fa-lg"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            <% } else { %>
                                <div class="main-menu menu-color--black menu-hover-color--golden">
                                    <div>
                                        <ul class="category-header">
                                            <li>
                                                <a href="/login" style="letter-spacing: 5px;">Login</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <% } %>
                                <!-- <li> -->
                                    <a  class="show-sidebar justify-content-center align-items-center d-none ">
                                        <i class="icon-menu fa-lg"></i>
                                    </a>
                            </div>

                                <!-- </li> -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>


    

    <div class="sidebar">
        <div class="main-menu menu-color--black menu-hover-color--golden col-12">
            <aside >
                <ul class="d-flex justify-content-end">
                    <li>
                        <button class="close-sidebar"><i class="icon-close fa-lg" style="color: wheat; "></i></button>
                    </li>
                </ul>
                <ul class="sidebar-header d-flex flex-column">
                    <li>
                        <a href="/user/home">Home</a>
                    </li>
                    <li class="has-dropdown has-megaitem">
                        <a class="show-shop">Shop <i class="fa fa-angle-down"></i></a>
                        <!-- Mega Menu -->
                        <div class="shop-sidebar-list">
                            <ul class="mega-menu-inner">
                                <% if (categories) { %>
                                    <% categories.forEach(category => { %>
                                        <li class="mega-menu-item">
                                            <a href="#" class="sub-mega-menu-title">
                                                <%= category.name %>
                                            </a>
                                            <ul class="mega">
                                                <% if (subCategories) { %>
                                                    <% subCategories.forEach(subCategory => { %>
                                                        <% if (subCategory.categoryId.toString() === category._id.toString()) { %>
                                                            <li>
                                                                <a href="/user/showProducts?subCatId=<%= subCategory._id.toString() %>" class="sidebar-sub-name">
                                                                    <%= subCategory.name %>
                                                                </a>
                                                            </li>
                                                        <% } %>
                                                    <% }) %>
                                                <% } %>
                                            </ul>
                                        </li>
                                    <% }) %>
                                <% } %>
                            </ul>
                            <div class="menu-banner">
                                <a href="#" class="menu-banner-link">
                                    <img class="menu-banner-img" src="/user/images/banner/menu-banner.jpg" alt="">
                                </a>
                            </div>
                        </div>
                    </li>
                    <li>
                        <a href="/user/aboutUs">About Us</a>
                    </li>
                    <li>
                        <a href="/user/contactUs">Contact Us</a>
                    </li>
                    <li>
                        <a href="/user/profile">Profile</a>
                    </li>
                    
                    <li>
                        <% if (isLoggedIn) { %>
                            <!-- <div class="d-flex">
                                <ul class="d-flex justify-content-center align-items-center logout">
                                    <li> -->
                                        <a href="/logout" class="d-flex justify-content-center align-items-center" style="letter-spacing: 5px;">
                                            <i class="icon-logout fa-md"> </i>Logout
                                        </a>
                                    <!-- </li>
                                </ul>
                            </div> -->
                        <% } else { %>
                            <!-- <div class="main-menu menu-color--black menu-hover-color--golden">
                                <nav>
                                    <ul class="category-header">
                                        <li> -->
                                            <a href="/login" class="d-flex justify-content-center align-items-center" style="letter-spacing: 5px;">
                                                <i class="icon-login fa-md"></i>Login</a>
                                        <!-- </li>
                                    </ul>
                                </nav>
                            </div> -->
                        <% } %>
                    </li>
                </ul>
            </aside>
            
        </div>

    </div>
