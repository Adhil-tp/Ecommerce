    <div class="wishlist-section">
        <!-- Start Cart Table -->
        <div class="wishlish-table-wrapper" data-aos="fade-up" data-aos-delay="0">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="table_desc">
                            <div class="table_page table-responsive">
                                <% if(products.length > 0) {%>
                                    <table>
                                        <!-- Start Wishlist Table Head -->
                                        <thead>
                                            <tr>
                                                <th class="product_remove">Delete</th>
                                                <th class="product_thumb">Image</th>
                                                <th class="product_name">Product</th>
                                                <th class="product-price">Price</th>
                                                <th class="product_stock">Stock Status</th>
                                                <th class="product_addcart">Add To Cart</th>
                                            </tr>
                                        </thead> <!-- End Cart Table Head -->
                                        <tbody>
                                            <!-- Start Wishlist Single Item-->
                                             
                                            
                                        </tbody>
                                        <% products.forEach(product => { %>
                                            <tr>
                                                <td class="product_remove"><a href="#"><i class="fa fa-trash-o"></i></a>
                                                </td>
                                                <td class="product_thumb"><a href="/user/productDetails/<%= product._id %>"><img
                                                    src="/images/products/<%= product.mainImage %>"
                                                    alt=""></a></td>
                                                    <td class="product_name"><a href="/user/productDetails/<%= product._id %>"><%= product.name%></a></td>
                                                    <td class="product-price"><%= product.offerPrice ? product.offerPrice : product.price%></td>
                                                    <td class="product_stock"><%= product.stock > 0 ? 'In stock' : 'Out of stock' %></td>
                                                    <td class="product_addcart"><button value="<%= product._id %>" class="btn btn-md btn-golden">Add To Cart</button></td>
                                                </tr>
                                                <% }) %>
                                                <% }%>
                                            </table>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- End Cart Table -->
    </div> <!-- ...:::: End Wishlist Section:::... -->
